{
  "name": "chat-animator",
  "version": "1.0.0",
  "description": "Animated chat screenshot maker using Remotion",
  "main": "index.js",
  "scripts": {
    "start": "remotion studio --port 4200 --ipv4",
    "dev": "remotion studio --port 4200 --ipv4",
    "build": "remotion bundle --public-dir=public --out-dir=dist",
    "render": "remotion render ChatAnimator out/chat.mp4 --port=4201",
    "render:hq": "remotion render ChatAnimator out/chat.mp4 --crf=15 --x264-preset=slower --port=4201",
    "render:fast": "remotion render ChatAnimator out/chat.mp4 --crf=23 --x264-preset=fast --port=4201",
    "render:gif": "remotion render ChatAnimator out/chat.gif --image-format=png --port=4201",
    "upgrade": "remotion upgrade"
  },
  "keywords": [
    "remotion",
    "chat",
    "animation",
    "whatsapp",
    "imessage",
    "messenger"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "@remotion/bundler": "^4.0.409",
    "@remotion/cli": "^4.0.409",
    "@remotion/player": "^4.0.410",
    "@remotion/zod-types": "^4.0.409",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "remotion": "^4.0.409",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "zod": "^3.22.3"
  }
}
